[
  {
    "clean": ["~", "~/.config/bspwm", "~/.config/sxhkd"]
  },
  {
    "link": {
      "~/.vimrc": "vimrc",
      "~/.vim": "vim/",
      "~/.nvimrc": "nvimrc",
      "~/.nvim": "nvim",
      "~/.zshenv": "zshenv",
      "~/.zshrc": "zshrc",
      "~/.tmux.conf": "tmux.conf",
      "~/.bin": "bin/",
      "~/.compton.conf": "compton.conf",
      "~/.dircolors": "dircolors",
      "~/.gitconfig": "gitconfig",
      "~/.gitignore_global": "gitignore_global",
      "~/.config/bspwm": "bspwm/",
      "~/.config/sxhkd": "sxhkd/",
      "~/.config/termite": "termite/"
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"]
    ]
  }
]
