#
# bspwm hotkeys
#

# Restart
super + ctrl + q
  killall bard sxhkd; \
  bspc quit

# Kill window
super + shift + c
  bspc window -c

# Set floating, fullscreen, pseudo-tiled
super + {s,f,p}
  bspc window -t {floating,fullscreen,sticky}

# Maximise
super + m
  bspc window -s biggest

# Focus left, down, right, up
super + {h,j,k,l}
  bspc window -f {left,down,up,right}

# Move left, down, right, up
super + shift + {h,j,k,l}
  bspc window -s {left,down,up,right}

# Cycle counter-clockwise, clockwise
# Moves windows around in current layout
super + {comma,period}
  bspc desktop -C {backward,forward}

# Rotates counter-clockwise, clockwise
# Changes layout
super + shift + {comma, period}
  bspc desktop -R {270, 90}

# Shift desktop
super + {Left,Right}
  bspc desktop -f {prev,next}

# Focus other monitor
super + ctrl + {j,k}
  bspc monitor -f {prev,next}

# Split and insert next; left, down, right, up
super + ctrl + alt + {h,j,k,l}
  bspc window -p {left, down, up, right} -r 0.5

# Increase size
super + alt + {h,j,k,l}
  bspc window -e {left -10,down +10,up -10,right +10}

# Decrease size
super + alt + shift + {h,j,k,l}
  bspc window -e {right -10,up +10,down -10,left +10}

# Focus desktop #1-9
super + {1-9}
  bspc desktop -f focused:^{1-9}

# Move window to desktop #1-9
super + shift + {1-9}
  bspc window -d focused:^{1-9}

# Move window to other monitor (own script)
super + o
  monitor-switch

~button1
  bspc pointer -g focus

super + button{1-3}
  bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
  bspc pointer -t %i %i

super + @button{1-3}
  bspc pointer -u

#
# wm independent hotkeys
#

super + Return
  termite

super + r
  dmenu_wrapper

# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd

# Random nice keybinds I like
super + Delete
  termite -e htop
super + End
  xkill

XF86MonBrightnessDown
  xbacklight -dec 10

XF86MonBrightnessUp
  xbacklight -inc 10

XF86AudioMute
  amixer -q set Master toggle
XF86AudioLowerVolume
  amixer -q set Master 5%-
XF86AudioRaiseVolume
  amixer -q set Master 5%+

ctrl + alt + l
  i3lock -i /home/filip/pictures/patterns/square_bg.png -t -u

# Change keyboard layout
super + F1
  setxkbmap us -variant colemak
super + F2
  setxkbmap usaswe

# programs
super + q
  qutebrowser
super + e
  pcmanfm
super + alt + m
  mpv $(xclip -o)
super + v
 termite -e ~/vattnadal.sh

# notifications
super + z
  info-notify
