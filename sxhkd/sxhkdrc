#
# bspwm hotkeys
#

super + ctrl + q
  killall bard sxhkd; \
  bspc quit

super + shift + c
  bspc window -c

super + {s,f,p}
  bspc window -t {floating,fullscreen,pseudo_tiled}

super + m
  bspc window -s biggest

super + {h,j,k,l}
  bspc window -f {left,down,up,right}

super + shift + {h,j,k,l}
  bspc window -s {left,down,up,right}

super + {comma,period}
  bspc desktop -C {backward,forward}

super + {Left,Right}
  bspc desktop -f {prev,next}

super + ctrl + {j,k}
  bspc monitor -f {prev,next}

super + ctrl + alt + {h,j,k,l}
  bspc window -p {left, down, up, right} -r 0.5

super + alt + {h,j,k,l}
  bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
  bspc window -e {right -10,up +10,down -10,left +10}

super + {1-9}
  bspc desktop -f focused:^{1-9}

super + shift + {1-9}
  bspc window -d focused:^{1-9}

super + o
  monitor-switch

~button1
  bspc pointer -g focus

super + button{1-3}
  bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
  bspc pointer -t %i %i

super + @button{1-3}
  bspc pointer -u

#
# wm independent hotkeys
#

super + Return
  termite

super + r
  dmenu_wrapper

# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd

# Random nice keybinds I like
super + Delete
  termite -e htop
super + End
  xkill

XF86MonBrightnessDown
  xbacklight -dec 10

XF86MonBrightnessUp
  xbacklight -inc 10

XF86AudioMute
  amixer -q set Master toggle
XF86AudioLowerVolume
  amixer -q set Master 5%-
XF86AudioRaiseVolume
  amixer -q set Master 5%+

ctrl + alt + l
  i3lock -i /home/filip/pictures/patterns/square_bg.png -t -u

# programs
super + q
  qutebrowser
super + e
  pcmanfm
super + alt + m
  mpv $(xclip -o)
super + c
 termite -e ~/vattnadal.sh
