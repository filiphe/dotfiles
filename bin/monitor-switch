#!/bin/bash
MONITOR=$(bspc query --monitors --monitor focused)
WINDOW=$(bspc query --windows --window focused)
if [[ "$MONITOR" == "DVI-I-1" ]]; then
	bspc window -f focused -m DVI-I-2
	bspc window -f "$WINDOW"
fi
if [[ "$MONITOR" == "DVI-I-2" ]]; then
	bspc window -f focused -m DVI-I-1
	bspc window -f "$WINDOW"
fi

