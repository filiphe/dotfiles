#!/bin/sh

status=$(amixer -M get Master | tail -n 1 | awk '{print $6}' | tr -d '[]')

if [ "$status" == "off" ]; then
	vol="muted"
	echo 'v '$vol
elif [ "$status" == "on" ]; then
	vol=$(amixer -M get Master | grep -oE '[0-9]+%' | tr -d '%' | tail -n 1)
	if [[ $vol -lt 25 ]]; then
		echo 'v '$vol'%%'
	elif [[ $vol -lt 50 && $vol -gt 25 ]]; then
		echo 'v '$vol'%%'
	elif [[ $vol -lt 75 && $vol -gt 50 ]]; then
		echo 'v ' $vol'%%'
	elif [[ $vol -gt 75 ]]; then
		echo 'v ' $vol'%%'
	fi
fi
