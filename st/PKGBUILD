pkgname=filiphe-st
pkgver=0.7
pkgrel=2
pkgdesc='A simple virtual terminal emulator for X.'
arch=('i686' 'x86_64')
license=('MIT')
depends=('libxft' 'libxext')
makedepends=('ncurses')
conflicts=('st')
url="http://st.suckless.org"
source=(http://dl.suckless.org/st/st-${pkgver}.tar.gz
        http://st.suckless.org/patches/st-scrollback-0.7.diff
        http://st.suckless.org/patches/st-scrollback-mouse-20161020-6e79e83.diff
        http://st.suckless.org/patches/st-scrollback-mouse-altscreen-20161020-6e79e83.diff
        config.h
        config.mk)
md5sums=('SKIP'
         'SKIP'
         'SKIP'
         'SKIP'
         'SKIP'
         'SKIP')

build() {
  cd $srcdir/st-${pkgver}
  cp $srcdir/config.h config.h
  cp $srcdir/st-scrollback-0.7.diff st-scrollback-0.7.diff
  cp $srcdir/st-scrollback-mouse-20161020-6e79e83.diff st-scrollback-mouse-20161020-6e79e83.diff
  cp $srcdir/st-scrollback-mouse-altscreen-20161020-6e79e83.diff st-scrollback-mouse-altscreen-20161020-6e79e83.diff
  cp $srcdir/config.mk config.mk
  git apply st-scrollback-0.7.diff
  git apply st-scrollback-mouse-20161020-6e79e83.diff
  git apply st-scrollback-mouse-altscreen-20161020-6e79e83.diff
  make
}

package() {
  cd $srcdir/st-${pkgver}
  make PREFIX=/usr DESTDIR="$pkgdir" install
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/st/LICENSE"
  install -Dm644 README "$pkgdir/usr/share/doc/st/README"
}
